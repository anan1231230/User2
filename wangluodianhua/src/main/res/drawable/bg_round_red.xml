<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="match_parent">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/white" />
            <!--<stroke android:width="1dp" android:color="@color/colorAccent" />-->
            <size android:width="40dp" android:height="40dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/grey" />
            <!--<stroke android:width="1dp" android:color="@color/colorAccent" />-->
            <size android:width="40dp" android:height="40dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/grey" />
            <!--<stroke android:width="1dp" android:color="@color/colorAccent" />-->
            <size android:width="40dp" android:height="40dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>