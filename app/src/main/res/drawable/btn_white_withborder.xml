<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="match_parent">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1sp" android:color="@color/gray_9"/>
            <solid android:color="@color/light_blue" />
            <corners android:radius="4dp" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <stroke android:width="1sp" android:color="@color/gray_9"/>
            <solid android:color="@color/light_blue" />
            <corners android:radius="4dp" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1sp" android:color="@color/gray_9"/>
            <solid android:color="@color/white" />
            <corners android:radius="4dp" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>
</selector>