<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="match_parent">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/half_blue" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/half_blue" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1px" android:color="@color/gray"/>
            <solid android:color="@color/white" />
        </shape>
    </item>
</selector>