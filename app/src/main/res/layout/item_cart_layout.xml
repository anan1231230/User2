<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="1dp"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/cart_img_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/perm_pic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cart_img_logo">

            <TextView
                android:id="@+id/cart_txt_name"
                style="@style/commonstyle_black_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="澳大利亚澳大利亚澳大利亚澳大利亚澳大利亚"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cart_txt_name_append"
                style="@style/commonstyle_black_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cart_txt_name"
                android:layout_marginTop="10dp"
                android:text="750g"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cart_txt_price"
                style="@style/commonstyle_red_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cart_txt_name_append"
                android:layout_marginTop="10dp"
                android:text="￥3958" />

            <TextView
                android:id="@+id/cart_add_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/gray_border"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="+"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cart_num_tv"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/cart_add_tv"
                android:gravity="center"
                android:padding="4dp"
                android:inputType="number"
                android:text="10"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cart_del_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/cart_num_tv"
                android:background="@drawable/gray_border"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:text="-"
                android:textSize="20sp" />

        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_cshop_note"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="10sp"
        android:text="终端价格：¥200，您盈利30%"
        android:paddingBottom="4dp"
        />
    <TextView
        android:id="@+id/tv_dshop_note"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="10sp"
        android:paddingBottom="4dp"
        android:text="合伙人价格：¥"
        />
</LinearLayout>