<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:id="@+id/ll_change_touxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin">

        <TextView
            android:id="@+id/tv_phonenum"
            style="@style/commonstyle_black_d"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_top_size"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_weight=".5"
            android:gravity="center_vertical"
            android:text="@string/head_image" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/common_top_size"
                android:layout_height="@dimen/common_top_size"
                android:layout_marginRight="@dimen/common_margin"
                android:src="@mipmap/perm_pic" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_2" />

    <LinearLayout
        android:id="@+id/ll_change_nicheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin">

        <TextView
            style="@style/commonstyle_black_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:layout_weight=".5"
            android:hint="@string/nicheng" />

        <TextView
            android:id="@+id/tv_nicheng"
            style="@style/commonstyle_black_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:layout_weight=".5"
            android:gravity="right" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_2" />

</LinearLayout>
