<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        style="@style/login_regist_wrap"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_phonenum"
            style="@style/login_name_text"
            android:layout_height="55dip"
            android:background="@drawable/shape_input_top"
            android:hint="请输入您的手机号"
            android:imeActionLabel="下一个"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="11" />

        <EditText
            android:id="@+id/et_pwd"
            style="@style/login_psw_text"
            android:layout_marginTop="2dp"
            android:background="@drawable/shape_input_bottom"
            android:hint="请输入登录密码"
            android:imeActionLabel="完成"
            android:imeOptions="actionDone"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_login"
            style="@style/login_btn"
            android:layout_marginTop="24dip"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_login"
            android:gravity="center"
            android:text="登 录" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="忘记密码"
                android:textColor="@color/gray_6" />

            <TextView
                android:id="@+id/tv_zhuce"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dip"
                android:layout_weight="1"
                android:gravity="right"
                android:text="注册"
                android:textColor="@color/gray_6" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/login_version"
        style="@style/commonstyle_black_c"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="bottom"
        android:paddingRight="16dp"
        android:text="版本号:2.1.4" />
</LinearLayout>
